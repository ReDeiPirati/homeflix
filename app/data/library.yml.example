# HomeFlix Library Configuration
# Copy this file to library.yml and customize for your media library

collections:
  # Series - has seasons with episodes
  - id: big-bang-theory
    title: The Big Bang Theory
    type: series
    path: The Big Bang Theory
    poster: The Big Bang Theory/assets/poster.jpg
    backdrop: The Big Bang Theory/assets/backdrop.jpg
    description: A sitcom about four nerdy scientists and their interactions with the world.
    seasons:
      - number: 1
        poster: The Big Bang Theory/assets/seasons/s01.jpg
        episodes:
          - id: tbbt-s01e01
            title: Pilot
            season: 1
            episode: 1
            filename: S01E01.mp4
            thumbnail: The Big Bang Theory/assets/episodes/s01e01.jpg
          - id: tbbt-s01e02
            title: The Big Bran Hypothesis
            season: 1
            episode: 2
            filename: S01E02.mp4
            thumbnail: The Big Bang Theory/assets/episodes/s01e02.jpg

  # Movie - flat structure with filename
  - id: naked-gun
    title: The Naked Gun
    type: movie
    path: The Naked Gun
    filename: movie.mp4
    poster: The Naked Gun/assets/poster.jpg
    backdrop: The Naked Gun/assets/backdrop.jpg
    description: A classic comedy film.

